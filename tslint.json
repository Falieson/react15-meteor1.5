{
  "extends": [
    "tslint:recommended",
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
    // TypeScript rules
    "restrict-plus-operands": true,
    "strict-boolean-expressions": true,
    "switch-default": true,
    "triple-equals": [true],
    "prefer-for-of": true,
    "no-any": true,
    "no-empty-interface": true,
    "no-import-side-effect": true,

    // general rules
    // "file-header": [true, "Copyright \\d{4} Flex"],

    // react rules
    "jsx-wrap-multiline": false,

    // style rules
    "semicolon": ["never"],
    "quotemark": [true, "single", "avoid-escape"],
    "max-classes-per-file": [true, 2]
  }
}